# ===== CONFIGURACIÓN DEL SERVIDOR =====
PORT=4000
NODE_ENV=development

# ===== BASE DE DATOS =====
MONGODB_URI=mongodb://localhost:27017/fastwings

# ===== AUTENTICACIÓN JWT =====
JWT_SECRET=cambia_este_secret_en_produccion_por_algo_muy_largo_y_complejo
JWT_EXPIRES_IN=24h

# ===== SUPER ADMIN =====
SUPER_ADMIN_EMAIL=admin@fastwings.com
SUPER_ADMIN_PASSWORD=admin123
SUPER_ADMIN_NAME=Administrador Principal

# ===== WHATSAPP =====
WHATSAPP_PROVIDER=whatsapp-web.js
CHROME_PATH=/usr/bin/chromium-browser
# Para Windows: CHROME_PATH=C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe

# ===== LÍMITES Y CONFIGURACIÓN =====
MAX_ADMINS_FREE=5
SERVICE_FEE=0.05
MAX_AUTO_REPLIES_PER_DAY=1000
MAX_MESSAGES_PER_MINUTE=60

# ===== EMAIL (OPCIONAL) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_de_aplicacion
SMTP_FROM=noreply@fastwings.com

# ===== BRANDING =====
BILLING_LOGO=uploads/logo.png
BILLING_FOOTER=Gracias por preferir FastWings
COMPANY_NAME=FastWings
COMPANY_PHONE=+573001234567
COMPANY_EMAIL=info@fastwings.com

# ===== SEGURIDAD =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# ===== LOGS =====
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ===== UPLOADS =====
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=uploads

# ===== CACHE =====
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# ===== MONITORING =====
ENABLE_METRICS=true
METRICS_PORT=9090
